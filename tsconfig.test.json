{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es2020",
        "strict": true,
        "outDir": "./out",
        "lib": [
            "ES2020",
            "ESNext.Intl"
        ],
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/index.ts",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}